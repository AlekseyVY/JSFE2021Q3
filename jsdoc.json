{
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "recursive": true
  },
  "opts": {
    "recurse": true,
    "destination": "./docs",
    "template": "node_modules/docdash"
  }
}